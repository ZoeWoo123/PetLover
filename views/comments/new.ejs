<%- include("../partials/header")%>

<!-- form -->
<div class="container">
	<h2 style="text-align: center">
		Leave a comment if you like <%= candidate.name%>!
	</h2>
	<div style="width:60%; margin:25px auto;">
		<form action="/candidates/<%= candidate._id%>/comments" method="POST">
			<!-- comment text -->
			<div class="form-group">
				<textarea type="text" class="form-control" id="text" name="comment[text]" required></textarea>
			</div>
			
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</div>

		</form>
		<a href="/candidates/<%= candidate._id%>">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>